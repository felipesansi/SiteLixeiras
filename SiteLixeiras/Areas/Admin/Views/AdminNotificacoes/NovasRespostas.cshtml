@model List<SiteLixeiras.Models.Notificacao>
@{
    ViewData["Title"] = "Novas Respostas de Usuários";
}

<div class="container my-5">
    <h2 class="fw-bold text-primary mb-4">Novas Respostas de Usuários</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info shadow-sm">Nenhuma nova resposta encontrada.</div>
    }
    else
    {
        <div class="list-group">
            @foreach (var item in Model)
            {
                <div class="list-group-item list-group-item-action mb-3 border rounded shadow-sm">
                    <div class="d-flex w-100 justify-content-between">
                        <h5 class="mb-1 fw-semibold text-dark">@item.Usuario?.UserName ?? "Usuário desconhecido"</h5>
                        <small class="text-muted">@item.DataCriacao.ToString("dd/MM/yyyy HH:mm")</small>
                    </div>
                    <p class="mb-2">@item.Mensagem</p>
                    <a asp-action="Detalhes" asp-route-id="@item.NotificacaoPaiId ?? item.Id" class="btn btn-outline-primary btn-sm">Visualizar e Responder</a>
                </div>
            }
        </div>
    }
</div>
