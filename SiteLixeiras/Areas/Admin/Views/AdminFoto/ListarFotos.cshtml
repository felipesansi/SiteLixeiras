@model IEnumerable<SiteLixeiras.Models.Foto>

@{
    ViewData["Title"] = "Fotos do Produto";
}

<style>
 
</style>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">Fotos do Produto</h2>
       <div>
            <a asp-action="EnviarFotos" class="btn btn-padrao me-2">
                <i class="fas fa-plus"></i> Adicionar Foto
            </a>
            <a asp-action="Index" asp-controller="AdminProdutos" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Voltar
            </a>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">Nenhuma foto cadastrada para este produto.</div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var foto in Model)
            {
                <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                    <div class="card foto-card h-100 shadow-sm">
                        <img src="@foto.Url" class="card-img-top foto-img" alt="Foto do produto" />
                        <div class="card-body text-center">
                            <h6 class="card-title mb-2">@foto.Produto?.Nome</h6>
                           
                        </div>
                        <div class="card-footer foto-footer text-center">
                            <form asp-action="ExcluirFoto" asp-route-id="@foto.FotoId" method="post" class="d-inline" onsubmit="return confirm('Tem certeza que deseja excluir esta foto?');">
                                <button type="submit" class="btn btn-outline-danger btn-sm" title="Excluir">
                                    <i class="fas fa-trash-alt"></i>
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    <div class="mt-4">
       
    </div>
</div>
