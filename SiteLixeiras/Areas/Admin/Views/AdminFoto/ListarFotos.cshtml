@model List<SiteLixeiras.Models.Foto>

@{
    ViewData["Title"] = "Lista de Fotos";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">📷 Lista de Fotos</h2>
        <a asp-area="Admin" asp-controller="AdminProdutos" asp-action="Index" class="btn btn-outline-secondary">
            ← Voltar para Produtos
        </a>
    </div>

    <div class="mb-3">
        <a class="btn btn-primary" asp-area="Admin" asp-controller="AdminFoto" asp-action="EnviarFotos">
            ➕ Enviar Novas Fotos
        </a>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Imagem</th>
                        <th>Produto</th>
                        <th>Descrição</th>
                        <th class="text-center">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var foto in Model)
                    {
                        <tr>
                            <td>
                                <img src="@foto.Url" alt="Foto do produto" class="img-thumbnail" style="max-height: 100px;" />
                            </td>
                            <td>@foto.Produto?.Nome</td>
                            <td>@foto.Produto?.Descricao</td>
                            <td class="text-center">
                                <form asp-action="ExcluirFoto" asp-route-id="@foto.FotoId" method="post" onsubmit="return confirm('Deseja realmente excluir esta foto?');">
                                    <button type="submit" class="btn btn-sm btn-danger">
                                        🗑️ Excluir
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <p class="mt-4 text-muted">Nenhuma foto carregada.</p>
    }
</div>
