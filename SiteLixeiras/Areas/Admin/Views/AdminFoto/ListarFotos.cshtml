@model List<SiteLixeiras.Models.Foto>

@{
    ViewData["Title"] = "Lista de Fotos";
}

<h2>Lista de Fotos</h2>

<form asp-action="ListarFotos" method="post">
    <a class="nav-link text-white" asp-area="Admin" asp-controller="AdminFoto" asp-action="EnviarFotos">Enviar Fotos</a>
</form>

@if (Model != null && Model.Any())
{
    <table class="table table-bordered mt-4">
        <thead>
            <tr>
                <th>Imagem</th>
                <th>Produto</th>
                <th>Descrição</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var foto in Model)
            {
                <tr>
                    <td>
                        <img src="@foto.Url" alt="Foto do produto" style="max-height: 100px;" />
                    </td>
                    <td>@foto.Produto?.Nome</td>
                    <td>@foto.Produto?.Descricao</td>
                    <td>
                        <form asp-action="ExcluirFoto" asp-route-id="@foto.FotoId" method="post" onsubmit="return confirm('Deseja realmente excluir esta foto?');">
                            <button type="submit" class="btn btn-danger btn-sm">Excluir</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="mt-3 text-muted">Nenhuma foto carregada.</p>
}
