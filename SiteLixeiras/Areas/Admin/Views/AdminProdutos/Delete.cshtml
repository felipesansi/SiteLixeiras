@model SiteLixeiras.Models.Produtos

@{
    ViewData["Title"] = "Excluir Produto";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-danger"><i class="bi bi-trash3-fill me-2"></i>Excluir Produto</h2>
        <a asp-action="Index" class="btn btn-outline-secondary rounded-pill">
            <i class="bi bi-arrow-left me-1"></i>Voltar à Lista
        </a>
    </div>

    <div class="alert alert-warning shadow-sm rounded-4 p-4">
        <h5 class="text-danger fw-semibold"><i class="bi bi-exclamation-triangle me-2"></i>Tem certeza que deseja excluir este produto?</h5>
    </div>

    <div class="card shadow-sm rounded-4 mt-3">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 fw-semibold">@Html.DisplayNameFor(model => model.Codigo)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Codigo)</dd>

                <dt class="col-sm-3 fw-semibold">@Html.DisplayNameFor(model => model.Nome)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Nome)</dd>

                <dt class="col-sm-3 fw-semibold">@Html.DisplayNameFor(model => model.Descricao)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Descricao)</dd>

                <dt class="col-sm-3 fw-semibold">@Html.DisplayNameFor(model => model.altura)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.altura) cm</dd>

                <dt class="col-sm-3 fw-semibold">@Html.DisplayNameFor(model => model.largura)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.largura) cm</dd>

                <dt class="col-sm-3 fw-semibold">@Html.DisplayNameFor(model => model.Preco)</dt>
                <dd class="col-sm-9">R$ @Html.DisplayFor(model => model.Preco)</dd>

                <dt class="col-sm-3 fw-semibold">@Html.DisplayNameFor(model => model.Destaque)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Destaque)</dd>

                <dt class="col-sm-3 fw-semibold">Categoria</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Categoria.Descricao)</dd>

                <dt class="col-sm-3 fw-semibold">Imagem</dt>
                <dd class="col-sm-9">
                    @if (!string.IsNullOrEmpty(Model.ImagemThumbUrl))
                    {
                        <img src="@Model.ImagemThumbUrl" alt="Thumb" class="img-thumbnail" style="max-height: 120px;" />
                    }
                    else
                    {
                        <span class="text-muted">Sem imagem</span>
                    }
                </dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete" class="mt-4">
        <input type="hidden" asp-for="Id_Produto" />
        <div class="d-flex justify-content-end">
            <button type="submit" class="btn btn-danger px-4 me-2 rounded-pill">
                <i class="bi bi-trash3"></i> Confirmar Exclusão
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary rounded-pill">
                Cancelar
            </a>
        </div>
    </form>
</div>
