@model SiteLixeiras.Models.Categoria

@{
    ViewData["Title"] = "Excluir Categoria";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-danger">
            <i class="bi bi-trash3 me-2"></i>Excluir Categoria
        </h2>
        <a asp-action="Index" class="btn btn-outline-secondary rounded-pill">
            <i class="bi bi-arrow-left me-1"></i>Voltar à Lista
        </a>
    </div>

    <div class="card border-danger shadow-sm">
        <div class="card-body">
            <h5 class="text-danger mb-4">Tem certeza de que deseja excluir esta categoria?</h5>

            <dl class="row">
                <dt class="col-sm-3 fw-bold">Nome</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Nome)</dd>

                <dt class="col-sm-3 fw-bold">Descrição</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Descricao)</dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="IdCategoria" />
                <div class="mt-4">
                    <button type="submit" class="btn btn-danger rounded-pill px-4">
                        <i class="bi bi-trash me-1"></i>Confirmar Exclusão
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary rounded-pill ms-2">
                        Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
