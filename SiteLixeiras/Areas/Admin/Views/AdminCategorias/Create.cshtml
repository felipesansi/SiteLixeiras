@model SiteLixeiras.Models.Categoria

@{
    ViewData["Title"] = "Create";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold"><i class="bi bi-box-seam me-2"></i>Nova Categoria</h2>
        <a asp-action="Index" class="btn btn-outline-secondary rounded-pill">
            <i class="bi bi-arrow-left me-1"></i>Voltar à Lista
        </a>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <div class="row g-3">
                <div class="col-md-6">
                    <label asp-for="Nome" class="form-label">Nome da Categoria</label>
                    <input asp-for="Nome" class="form-control" placeholder="Ex: Lixeiras de Luxo" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="Descricao" class="form-label">Descrição</label>
                    <input asp-for="Descricao" class="form-control" placeholder="Breve descrição da categoria..." />
                    <span asp-validation-for="Descricao" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-12 mt-4">
                <input type="submit" value="Criar Categoria" class="btn btn-primary w-100" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
