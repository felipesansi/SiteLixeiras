@model SiteLixeiras.Models.Categoria

@{
    ViewData["Title"] = "Detalhes da Categoria";
}


<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold"><i class="bi bi-folder2-open me-2"></i>Detalhes da Categoria</h2>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.IdCategoria" class="btn btn-warning rounded-pill me-2">
                <i class="bi bi-pencil-square"></i> Editar
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary rounded-pill">
                <i class="bi bi-arrow-left"></i> Voltar à Lista
            </a>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 fw-semibold">Nome</dt>
                <dd class="col-sm-9">@Model.Nome</dd>

                <dt class="col-sm-3 fw-semibold">Descrição</dt>
                <dd class="col-sm-9">@Model.Descricao</dd>
            </dl>
        </div>
    </div>
</div>
