@model (string NomeUsuario, int QuantidadeNotificacoes)

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <title>Notificações não lidas</title>
    <style>
        body { font-family: 'Inter', Arial, sans-serif; background: #f8f9fa; color: #222; }
        .container { max-width: 600px; margin: 0 auto; background: #fff; border-radius: 8px; box-shadow: 0 2px 8px #eee; padding: 32px; }
        .header { background: #1A3300; color: #fff; padding: 16px; border-radius: 8px 8px 0 0; text-align: center; }
        .btn { display: inline-block; background: #1A3300; color: #fff; padding: 10px 24px; border-radius: 4px; text-decoration: none; margin-top: 16px; }
        .footer { color: #888; font-size: 13px; margin-top: 32px; text-align: center; }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h2>Você tem notificações não lidas!</h2>
        </div>
        <p>Olá @Model.NomeUsuario,</p>
        <p>Você possui <strong>@Model.QuantidadeNotificacoes</strong> notificações não lidas em seu perfil.</p>
        <p>Acesse sua conta para visualizar e responder suas notificações.</p>
        <a href="https://www.seusite.com.br/conta/notificacoes" class="btn">Ver minhas notificações</a>
        <div class="footer">
            <p>Equipe Lixeira de resina<br />Obrigado por utilizar nossos serviços!</p>
        </div>
    </div>
</body>
</html>
