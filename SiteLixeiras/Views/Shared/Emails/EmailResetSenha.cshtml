@model SiteLixeiras.ViewModel.ResetSenhaEmailViewModel

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Redefinição de Senha</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            color: #333;
        }

        .container {
            max-width: 600px;
            margin: auto;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 8px;
        }

        h2 {
            color: #1A3300;
        }

        a.botao {
            display: inline-block;
            margin-top: 20px;
            padding: 12px 20px;
            background-color: #1A3300;
            color: white;
            text-decoration: none;
            border-radius: 6px;
        }

        .footer {
            margin-top: 30px;
            font-size: 12px;
            color: #777;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Redefinição de Senha</h2>
        <p>Olá @Model.NomeUsuario,</p>
        <p>Você solicitou a redefinição da sua senha. Para prosseguir, clique no botão abaixo:</p>

        <a class="botao" href="@Model.LinkReset">Redefinir Senha</a>

        <p>Se você não solicitou essa alteração, ignore este e-mail.</p>

        <div class="footer">
            <p>Lixeiras de resina &copy; @DateTime.Now.Year</p>
        </div>
    </div>
</body>
</html>
