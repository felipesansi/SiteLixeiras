@using Microsoft.AspNetCore.Identity
@inject UserManager<IdentityUser> _userManager
@inject SignInManager<IdentityUser> _signInManager

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css"
      integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg=="
      crossorigin="anonymous" referrerpolicy="no-referrer" />

@if (_signInManager.IsSignedIn(User))
{
    var usuario = await _userManager.GetUserAsync(User);
    var email = await _userManager.GetEmailAsync(usuario);

    <ul class="nav navbar-nav">
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle text-white" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                <i class="fa-solid fa-user-circle me-2"></i> @User.Identity?.Name
            </a>
            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                <li class="dropdown-item-text">
                    <strong>Usuário:</strong> @User.Identity?.Name
                </li>
                <li class="dropdown-item-text">
                    <strong>Email:</strong> @email
                </li>

                @if (User.IsInRole("User"))
                {
                    <li><hr class="dropdown-divider" /></li>
                    <li>
                        <a class="dropdown-item" asp-controller="Pedidos" asp-action="HistoricoPedidos">
                            <i class="fa-solid fa-box-archive me-2"></i> Histórico de Pedidos
                        </a>
                    </li>
                    <li>
                        <a class="dropdown-item" asp-controller="Account" asp-action="Configuracao">
                            <i class="fa-solid fa-box-archive me-2"></i> Configuração
                        </a>
                    </li>
                }

                <li><hr class="dropdown-divider" /></li>
                <li>
                    <form asp-controller="Account" asp-action="Logout" method="post" class="dropdown-item p-0 m-0">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger w-100 rounded-0">
                            <i class="fa-solid fa-right-from-bracket me-2"></i> Desconectar
                        </button>
                    </form>
                </li>
            </ul>
        </li>
    </ul>
}
else
{
    <ul class="nav navbar-nav">
        <li class="nav-item">
            <a class="nav-link text-white btn btn-outline-secondary rounded-pill"
               asp-controller="Account"
               asp-action="Login"
               asp-route-returnUrl="@($"{Context.Request.Path}{Context.Request.QueryString}")">
                <i class="fa-solid fa-circle-user fa-2x"></i>
            </a>
        </li>
    </ul>
}
