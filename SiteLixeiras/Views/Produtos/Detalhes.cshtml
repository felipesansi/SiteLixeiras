@model SiteLixeiras.Models.Produtos

<div class="container py-5">
    <div class="row">
     
        <div class="col-lg-6 mb-4">

            @if (Model.Fotos != null && Model.Fotos.Any())
            {
                @await Html.PartialAsync("_CarrosselPartial", Model.Fotos)
            }
            else
            {
                <img src="@Model.Imagem" alt="Imagem do produto" class="img-fluid rounded shadow-sm" />
            }
        </div>

        
        <div class="col-lg-6 d-flex flex-column justify-content-center">
            <h1 class="verde fw-bold mb-3">@Model.Nome</h1>

            <div class="mb-3">
                <span class="fw-semibold text-muted">Código:</span>
                <span class="ms-1">@Model.Codigo</span>
            </div>

            <div class="mb-3">
                <span class="fw-semibold text-muted">Dimensões:</span>
                <span class="ms-1">@Model.altura cm (A) x @Model.largura cm (L)</span>
            </div>

            <div class="mb-3">
                <span class="fw-semibold text-muted">Descrição:</span>
                <p class="mt-1">@Model.Descricao</p>
            </div>

            <div class="mb-4">
                <span class="fw-semibold text-muted">Preço:</span>
                <h4 class="verde mt-1">@Model.Preco.ToString("C")</h4>
            </div>

            <a class="btn btn-padrao"
               asp-controller="CarrinhoCompra"
               asp-action="AdicionarAoCarrinho"
               asp-route-id="@Model.Id_Produto">
                Incluir no Carrinho
            </a>
            
        </div>
    </div>
</div>
