@{
    ViewData["Title"] = "Excluir Conta";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="text-center text-danger mb-4">Excluir Conta</h2>

            @if (TempData["MensagemErro"] != null)
            {
                <div class="alert alert-danger">
                    @TempData["MensagemErro"]
                </div>
            }

            @if (TempData["MensagemSucesso"] != null)
            {
                <div class="alert alert-success">
                    @TempData["MensagemSucesso"]
                </div>
            }

            <div class="alert alert-warning">
                <strong>Atenção:</strong> Esta ação é <u>irreversível</u>. Sua conta será permanentemente excluída.
            </div>

            <form asp-action="ExcluirConta" method="post">
                @Html.AntiForgeryToken()

                <div class="mb-3">
                    <label for="senha" class="form-label">Digite sua senha para confirmar:</label>
                    <input type="password" name="senha" id="senha" class="form-control @(ViewData.ModelState.IsValid ? "" : "is-invalid")" />
                    <div class="invalid-feedback">
                        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="d-flex justify-content-between">
                    <a href="javascript:history.back()" class="btn btn-secondary">Cancelar</a>
                    <button type="submit" class="btn btn-danger">Excluir Conta</button>
                </div>
            </form>
        </div>
    </div>
</div>
