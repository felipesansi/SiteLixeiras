@model ResetSenhaViewModel

@{
    ViewData["Title"] = "Recuperar Senha";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg p-4">
                <h2 class="text-center mb-3">Recuperar Senha</h2>
                <p class="text-muted text-center">Digite seu e-mail e enviaremos um link para redefinir sua senha.</p>

                @if (TempData["Mensagem"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        @TempData["Mensagem"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fechar"></button>
                    </div>
                }

                @if (TempData["Erro"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        @TempData["Erro"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fechar"></button>
                    </div>
                }

                <form asp-controller="Account" asp-action="EsqueciSenha" method="post">
                    <div class="mb-3">
                        <label asp-for="UserName" class="form-label">E-mail</label>
                        <input asp-for="UserName" class="form-control" placeholder="Digite seu e-mail ou usuário" required>
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-padrao w-100">Enviar Link de Recuperação</button>
                </form>

                <div class="text-center mt-3">
                    <a asp-controller="Account" asp-action="Login">Voltar para o Login</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
