@model SiteLixeiras.Models.EnderecoEntrega

@{
    ViewData["Title"] = "Excluir Endereço";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-0">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="bi bi-trash3-fill me-2"></i>Confirmar Exclusão</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <strong>Atenção:</strong> Tem certeza de que deseja excluir este endereço?
                    </div>
                    <dl class="row">

                        <dt class="col-sm-4">Usuário</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.User.Id)</dd>

                        <dt class="col-sm-4">Nome</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Nome)</dd>

                        <dt class="col-sm-4">Sobrenome</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.SobreNome)</dd>

                        <dt class="col-sm-4">Rua</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Rua)</dd>

                        <dt class="col-sm-4">Bairro</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Bairro)</dd>

                        <dt class="col-sm-4">Cidade</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Cidade)</dd>

                        <dt class="col-sm-4">Estado</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Estado)</dd>

                        <dt class="col-sm-4">Telefone</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Telefone)</dd>

                        <dt class="col-sm-4">CEP</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Cep)</dd>

                        <dt class="col-sm-4">CPF</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.CPF)</dd>

                    </dl>

                    <form asp-action="Delete" class="mt-4">
                        <input type="hidden" asp-for="EnderecoEntregaId" />
                        <button type="submit" class="btn btn-danger me-2">
                            <i class="bi bi-trash-fill me-1"></i>Excluir
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left-circle me-1"></i>Voltar à lista
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
