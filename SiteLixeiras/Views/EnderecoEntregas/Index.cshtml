@model IEnumerable<SiteLixeiras.Models.EnderecoEntrega>

@{
    ViewData["Title"] = "Endereços de Entrega";
}

<h1>Endereços de Entrega</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Novo Endereço</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Nome)</th>
            <th>@Html.DisplayNameFor(model => model.SobreNome)</th>
            <th>@Html.DisplayNameFor(model => model.Rua)</th>
            <th>@Html.DisplayNameFor(model => model.Bairro)</th>
            <th>@Html.DisplayNameFor(model => model.Estado)</th>
            <th>@Html.DisplayNameFor(model => model.Cidade)</th>
            <th>@Html.DisplayNameFor(model => model.Telefone)</th>
            <th>@Html.DisplayNameFor(model => model.Cep)</th>
            <th>@Html.DisplayNameFor(model => model.CPF)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                <td>@Html.DisplayFor(modelItem => item.SobreNome)</td>
                <td>@Html.DisplayFor(modelItem => item.Rua)</td>
                <td>@Html.DisplayFor(modelItem => item.Bairro)</td>
                <td>@Html.DisplayFor(modelItem => item.Estado)</td>
                <td>@Html.DisplayFor(modelItem => item.Cidade)</td>
                <td>@Html.DisplayFor(modelItem => item.Telefone)</td>
                <td>@Html.DisplayFor(modelItem => item.Cep)</td>
                <td>@Html.DisplayFor(modelItem => item.CPF)</td>
                <td>
                    <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.EnderecoEntregaId">Editar</a>
                    <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@item.EnderecoEntregaId">Detalhes</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.EnderecoEntregaId">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
