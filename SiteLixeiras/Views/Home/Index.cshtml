@model List<SiteLixeiras.Models.Produtos>

@{
    ViewData["Title"] = "Lixeiras de Resina - Artesanais e de Luxo";
}

<div class="container mt-5">
    <div class="row align-items-center">
        <div class="col-md-6" data-aos="fade-up" data-aos-delay="0">
            <h1 class="lh-sm verde" data-aos="fade-right" data-aos-delay="400">
                Lixeiras de Resina Artesanais – Luxo, Design e Sustentabilidade
            </h1>
            <p class="py-5 lh-lg" data-aos="fade-up">
                Produzimos <strong>lixeiras de resina</strong> de alto padrão para banheiros, escritórios e ambientes sofisticados.
                Cada peça é feita com <strong>resina poliéster pigmentada</strong> e acabamento artesanal.
                Nossa linha inclui <strong>cestos decorativos, bandejas, luminárias e kits para banheiro</strong>, todos personalizados nas cores desejadas.
            </p>
        </div>

        <div class="col-md-6 text-center" data-aos="zoom-in" data-aos-delay="300">
            <img src="~/imagens/Fotoslixeiras/Adobe Express - file.png"
                 class="img-fluid rounded"
                 alt="Cesto decorativo de resina artesanal – Lixeiras de luxo">
        </div>
    </div>

    <div class="row my-5 justify-content-center" data-aos="fade-up" data-aos-delay="400">
        <h1 class="text-center mb-4" data-aos="fade-down" data-aos-delay="500">
            Vídeo de Apresentação
        </h1>
        <div class="col-md-8 text-center position-relative" data-aos="zoom-in" data-aos-delay="600">
            <a href="https://youtube.com/shorts/7hFgfO_zy9g?feature=share" target="_blank" class="d-inline-block w-50">
                <img src="~/imagens/kit.png"
                     class="img-fluid rounded shadow"
                     alt="Vídeo institucional sobre lixeiras de resina">
                <i class="fa-solid fa-circle-play fa-4x text-white position-absolute top-50 start-50 translate-middle"
                   style="text-shadow: 2px 2px 8px rgba(0,0,0,0.6); cursor:pointer;"
                   data-aos="pulse"
                   data-aos-delay="700">
                </i>
            </a>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-md-12" data-aos="fade-up" data-aos-delay="600">
            <h2 class="text-center mb-4" data-aos="fade-down" data-aos-delay="900">
                Produtos em Destaque
            </h2>
            <div class="row">
                @if (Model != null && Model.Any())
                {
                    @foreach (var produto in Model)
                    {
                        <div class="col-md-4 mb-4" data-aos="flip-left" data-aos-delay="@(1000 + Model.IndexOf(produto) * 100)">
                            @await Html.PartialAsync("_Produtos", produto)
                        </div>
                    }
                }
                else
                {
                    <div class="col-12 text-center text-muted" data-aos="fade-up" data-aos-delay="1000">
                        <p>Nenhum produto encontrado.</p>
                    </div>
                }
            </div>
        </div>
    </div>

    <section class="py-4 text-center">
        <p class="text-muted">
            Encontre <strong>lixeiras decorativas de resina</strong> feitas sob medida com acabamento premium e escolha de cores.
            Acesse nosso <a href="/Home/Produtos">catálogo completo</a> ou confira as <a href="/Home/Catalogo">opções de cores</a>.
        </p>
    </section>
</div>
