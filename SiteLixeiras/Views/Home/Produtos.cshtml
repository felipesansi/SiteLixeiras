@model List<SiteLixeiras.Models.Produtos>
@{
    ViewData["Title"] = "Produtos";
}

<div class="container py-5">
    <h2 class="mb-4 text-center fw-bold">Encontre o produto ideal</h2>

    <!-- Formulário de busca -->
    <div class="card shadow-sm rounded mb-5 border-0">
        <div class="card-body">
            <form asp-action="Produtos" asp-controller="Home" method="get" class="row g-3 align-items-end">
                <div class="col-md-4">
                    <label for="precoMin" class="form-label">Preço Mínimo</label>
                    <input type="number" step="0.01" class="form-control" id="precoMin" name="precoMin"
                           value="@ViewData["precoMin"]" placeholder="Ex: 50.00" min="0" />
                </div>
                <div class="col-md-4">
                    <label for="precoMax" class="form-label">Preço Máximo</label>
                    <input type="number" step="0.01" class="form-control" id="precoMax" name="precoMax"
                           value="@ViewData["precoMax"]" placeholder="Ex: 200.00" min="0" />
                </div>
                <div class="col-md-4">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-search me-2"></i> Pesquisar
                    </button>
                </div>
            </form>
        </div>
    </div>

 
    @if (!string.IsNullOrEmpty(ViewBag.Mensagem as string))
    {
        <div class="alert alert-warning text-center fw-semibold">@ViewBag.Mensagem</div>
    }
    <div class="row">
        @if (Model != null && Model.Any())
        {
            @foreach (var produto in Model)
            {
                <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
                    @await Html.PartialAsync("_Produtos", produto)
                </div>
            }
        }
        else
        {
            <div class="col-12 text-center text-muted">
                <p>Nenhum produto encontrado com os preços de limites escolhidos</p>
            </div>
        }
    </div>
</div>
